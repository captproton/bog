<h1>Painting Gallery</h1>

<div id="photos">
  <%# render @photos %>
  <%= render :partial => "photo", :collection => @photos %>
</div>
<div class="clear"></div>
<%# render "direct_upload_form" %>
<%= direct_upload_form_for @uploader do |f| %>
  <p><%= f.file_field :image %></p>
  <p><%= f.submit "Upload Photo" %></p>
<% end %>
